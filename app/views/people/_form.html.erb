  
<div class="m-content">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
      <!--begin::Portlet-->
      <div class="m-portlet">
        <div class="m-portlet__head">
          <div class="m-portlet__head-caption">
            <div class="m-portlet__head-title">
              <span class="m-portlet__head-icon m--hide">
                <i class="la la-gear"></i>
              </span>
              <h3 class="m-portlet__head-text">
                Novo registro
              </h3>
            </div>
          </div>
        </div>
        <!--begin::Form-->
        
        <%= form_with(model: person, local: true, html: {class: "m-form"}) do |form| %> 
          <% if person.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>
              
              <ul>
              <% person.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>       
          <div class="m-portlet__body">
            <div class="m-form__section m-form__section--first">
              <div class="form-group m-form__group">
                <label for="example_input_full_name">
                  Nome:
                </label>
                <%= form.text_field :name, id: :person_name, class: "form-control m-input", placeholder: "Nome", autofocus: true, required: true %>
              </div>
              <div class="form-group m-form__group">
                <label for="example_input_full_name">
                  Documento:
                </label>
                <%= form.text_field :document, id: :person_document, class: "form-control m-input", placeholder: "Documento" %>
              </div>
              <div class="form-group m-form__group">
                <label for="example_input_full_name">
                  Email:
                </label>
                <%= form.text_field :email, id: :person_email, class: "form-control m-input", placeholder: "Email" %>
              </div>
              <div class="form-group m-form__group">
                <label for="example_input_full_name">
                  Telefone:
                </label>
                <%= form.text_field :phone, id: :person_phone, class: "form-control m-input", placeholder: "Telefone" %>
              </div>
              <div class="form-group m-form__group">
                <label>
                  Tipo:
                </label>
                <%= form.select(:people_category_id, PeopleCategory.all.collect {|u| [u.name, u.id]}, {prompt: 'Selecione o tipo'}, {class: "form-control", required: true}) %>
              </div>
              <div class="form-group m-form__group">
                <label>
                  Status:
                </label>
                <%= form.check_box :status, id: :person_status, class: "form-control m-input" %>
              </div>
            </div>
          </div>
          <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions">
              <button type="submit" class="btn btn-primary">
                Salvar
              </button>
              <%= link_to people_path, class: "btn btn-secondary" do %>
                Cancelar
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>